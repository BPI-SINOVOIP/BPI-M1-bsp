KERNEL_DIR=$(IMX51_KERNEL_DIR)
CROSS_COMPILE=$(IMX51_CROSS_COMPILE)
KERNEL_MAJOR_VERSION=2.6
export ARCH=arm

SDIO_HOST=imx51
TRANSPORT=ksdio
HOST=arm-none-linux-gnueabi

# We are faster without block mode on imx51
PLATFORM_FLAGS+=-DKSDIO_NO_BLOCK_MODE
PLATFORM_FLAGS+=-DUSE_SDIO_4BIT_MODE
PLATFORM_FLAGS+=-DKSDIO_FORCE_CLOCK=50000000
# PLATFORM_FLAGS+=-DKSDIO_HIGH_SPEED
